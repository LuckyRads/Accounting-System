<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accountingsystem.controller.UsersController">
   <children>
      <MenuBar layoutY="2.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openExport" text="Export" />
                  <MenuItem mnemonicParsing="false" onAction="#openImport" text="Import" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <ButtonBar layoutX="30.0" layoutY="366.0" prefHeight="64.0" prefWidth="560.0">
         <buttons>
            <Button fx:id="menuBtn" mnemonicParsing="false" onAction="#openMenu" prefHeight="0.0" prefWidth="242.0" text="Menu">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="peopleBtn" mnemonicParsing="false" onAction="#openPeople" prefHeight="0.0" prefWidth="242.0" text="People">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="companiesBtn" mnemonicParsing="false" onAction="#openCompanies" prefHeight="0.0" prefWidth="242.0" text="Companies">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
      <ListView fx:id="peopleList" editable="true" layoutX="45.0" layoutY="64.0" prefHeight="200.0" prefWidth="219.0" />
      <Label layoutX="45.0" layoutY="37.0" text="People">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <ListView fx:id="companiesList" editable="true" layoutX="321.0" layoutY="63.0" prefHeight="200.0" prefWidth="242.0" />
      <Label layoutX="319.0" layoutY="37.0" text="Companies">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
