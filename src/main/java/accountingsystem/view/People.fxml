<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.accountingsystem.controller.PeopleController">
   <children>
      <ButtonBar layoutX="20.0" layoutY="376.0" prefHeight="64.0" prefWidth="560.0">
         <buttons>
            <Button fx:id="backBtn" mnemonicParsing="false" onAction="#openMenu" prefHeight="44.0" prefWidth="242.0" text="Back">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="systemBtn" mnemonicParsing="false" prefHeight="43.0" text="System">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="usersBtn" minWidth="57.0" mnemonicParsing="false" prefHeight="0.0" text="Users">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </buttons>
      </ButtonBar>
      <ListView fx:id="peopleList" editable="true" layoutX="35.0" layoutY="54.0" prefHeight="200.0" prefWidth="200.0" />
      <Label layoutX="35.0" layoutY="37.0" text="People" />
      <Button fx:id="addPersonBtn" layoutX="35.0" layoutY="268.0" mnemonicParsing="false" onAction="#addPerson" text="Add person" />
      <Button fx:id="removePersonBtn" layoutX="135.0" layoutY="268.0" mnemonicParsing="false" onAction="#removePerson" text="Remove person" />
   </children>
</AnchorPane>
